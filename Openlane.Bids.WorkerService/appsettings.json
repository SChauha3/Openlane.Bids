{
  "AppSettings": {
    "InfraSettings": {
      "CacheSettings": {
        "Endpoints": "redis:6379",
        "Password": "Strong!Pass123"
      },
      "QueueSettings": {
        "HostName": "rabbitmq",
        "Port": 5672,
        "UserName": "user",
        "Password": "password"
      },
      "DbSettings": {
        "ConnectionString": "Server=sqlserver-db;Database=OpenlaneDb;User Id=sa;Password=StrongP@ssw0rd123;TrustServerCertificate=True;"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information", // Default for production
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.json",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}
